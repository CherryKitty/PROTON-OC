<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE experiments SYSTEM "behaviorspace.dtd">
<experiments>
    <experiment name="exp" repetitions="2" runMetricsEveryStep="true">
        <setup>setup</setup>
        <go>go</go>
        <final>show "Time elapsed:"
            show timer
        </final>
        <!-- assuming 50 years | ora sta a 4 anni per test -->
        <timeLimit steps="48"/>
        <!-- 1. Number of OC members per time unit (tentatively month) -->
        <metric>o1</metric>
        <!-- 2. Number of recruited individuals into OC per time unit -->
        <metric>o2</metric>
        <!-- 3. Number of crimes per time unit -->
        <metric>o3</metric>
        <!-- 4. Number of crimes committed by OC members per time unit -->
        <metric>o4</metric>
        <!-- 5. Distribution of C (which is the individual propensity towards crime commission) -->
        <metric>o5</metric>
        <!-- 6. Distribution of R (which is the individual embededdness into OC-prone local networks) -->
        <metric>o6</metric>
        <!-- 7. Distribution of socio-demographic variables on new recruited individuals -->
        <metric>o7a</metric>
        <metric>o7b</metric>
        <metric>o7c</metric>
        <!-- 8. Distribution of socio-demographic variables of OC members -->
        <metric>o8a</metric>
        <metric>o8b</metric>
        <metric>o8c</metric>
        <!-- 9. Distribution of socio-demographic variables of “ordinary criminals” (people that commit crime but are not part of an OC) -->
        <metric>o9a</metric>
        <metric>o9b</metric>
        <metric>o9c</metric>
        <!-- 10. Distribution of socio-demographic variables of the general population -->
        <metric>o10a</metric>
        <metric>o10b</metric>
        <metric>o10c</metric>
        <!-- 11. Number of crimes committed by facilitator agents per time unit -->
        <metric>sum [ num-crimes-committed ] of all-persons with [ facilitator > 0 ]</metric>
        <!-- 12. Number of law enforcement interventions per time unit -->
        <metric>1</metric>
        <!-- PARAMETERS -->
        <!-- Population size -->
        <enumeratedValueSet variable="num-persons">
            <value value="550"/>
            <value value="1000"/>
            <value value="1500"/>
        </enumeratedValueSet>
        <!-- 1. Number of OC members -->
        <enumeratedValueSet variable="num-oc-persons">
            <value value="25"/>
        </enumeratedValueSet>
        <!-- PALERMO SETUP -->
        <enumeratedValueSet variable="data-folder">
            <value value="&quot;inputs/palermo/data/&quot;"/>
        </enumeratedValueSet>
        <!-- 2. Criminal rate -->
        <!-- PALERMO SETUP -->
        <!-- 3a. Employment rate -->
        <!-- PALERMO SETUP -->
        <!-- 3b. Education rate -->
        <!-- PALERMO SETUP -->
        <!-- 4. Law enforcement intervention rate -->
        <enumeratedValueSet variable="targets-addressed-percent">
            <value value="10"/>
        </enumeratedValueSet>
        <enumeratedValueSet variable="ticks-between-intervention">
            <value value="2"/>
        </enumeratedValueSet>
        <enumeratedValueSet variable="intervention-start">
            <value value="12"/>
        </enumeratedValueSet>
        <enumeratedValueSet variable="intervention-end">
            <value value="24"/>
        </enumeratedValueSet>
        <!-- 5. Punishment length -->
        <enumeratedValueSet variable="OC-members-scrutinize?">
            <value value="true"/>
        </enumeratedValueSet>
        <enumeratedValueSet variable="OC-arrest-multiplier">
            <value value="1"/>
        </enumeratedValueSet>
        <enumeratedValueSet variable="OC-members-repression?">
            <value value="true"/>
        </enumeratedValueSet>
        <enumeratedValueSet variable="OC-members-per-tick">
            <value value="1"/>
        </enumeratedValueSet>
    </experiment>
</experiments>

